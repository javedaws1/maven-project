pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/prakashk0301/maven-project'
        }
  }
    {
        stage ('Compile Stage') {

            steps {
                withAnt(installation : 'ANT') {
                    sh 'ant clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withAnt(installation : 'ANT') {
                    sh 'ant test'
                }
            }
        }


        stage ('Create War Stage') {
            steps {
                withAnt(installation : 'ANT') {
                    sh 'ant war'
                }
            }
        }               
}
}
